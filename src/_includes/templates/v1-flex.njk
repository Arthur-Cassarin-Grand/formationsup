        color: var(--primary-color);
    }

    .review-text {
        font-style: italic;
        text-align: justify;
        line-height: 1.5em;
    }

    .review-image {
        max-width: 100%;
        border-radius: 180px;
        border: 5px solid var(--primary-color);
        box-shadow: 2px 2px 5px rgb(128, 128, 128);
    }

