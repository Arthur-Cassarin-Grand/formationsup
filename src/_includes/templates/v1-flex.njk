<section class="block-course-branches page-container">
    <style>
        .video-wrapper {
            position: relative;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 101%;
            height: 100%;
            background: rgba(255, 255, 255, 0.2); /* Couleur blanche avec 50% d'opacité */
        }

        .video-background {
            position: relative;
            width: 100%;
            height: 0;
            padding-bottom: 56.25%; /* Ratio 16:9 */
            overflow: hidden;
            border-radius: 20px;
            box-shadow: 2px 2px 5px rgb(128, 128, 128);
            border: 5px solid var(--primary-color);
        }

        .video-background iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        .play-button {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 10em;
            cursor: pointer;
        }

        .block-course-branches {
            display: grid;
            gap: 2rem;
            grid-template-columns: 1fr;
            margin-bottom: 4rem;
            align-items: center;
        }

        .course-branches-list-container {
            border-radius: 40px;
            box-shadow: 2px 2px 5px rgb(128, 128, 128);
            display: grid;
            align-items: center;
            align-content: center;
            grid-template-columns: 1fr;
            padding: 1rem;
        }

        /* Desktop et grands écrans */
        @media (min-width: 900px) {
            .block-course-branches {
                grid-template-columns: 1fr 1fr;
            }

            .course-branches-list-container {
                grid-template-columns: 1fr 1fr;
            }

            .course-branches-list-container {
                text-align: justify;
            }
        }

        .course-branches-list-container ul {
            list-style-type: none;
        }

        .course-branches-list-container ul li {
            font-weight: lighter;
        }
    </style>
