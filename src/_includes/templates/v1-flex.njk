<style>
    .block-course-reviews {
        margin-bottom: 4rem;
    }

    .review {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
        margin-bottom: 2rem;
        justify-items: center
    }

    .review-box {
        box-shadow: 2px 2px 5px rgb(128, 128, 128);
